{
  "openapi": "3.0.3",
  "info": {
    "title": "Security ROI Calculator API",
    "version": "1.0.0",
    "description": "API for analyzing security posture and calculating ROI for AWS accounts"
  },
  "servers": [
    {
      "url": "/"
    }
  ],
  "paths": {
    "/analyze_security": {
      "get": {
        "summary": "Analyze Security Posture",
        "description": "Analyzes security posture and calculates ROI for AWS accounts",
        "operationId": "analyze_security",
        "responses": {
          "200": {
            "description": "Successful security analysis",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "security_score": {
                      "type": "integer",
                      "description": "Overall security score (0-100)"
                    },
                    "total_findings": {
                      "type": "integer",
                      "description": "Total number of security findings"
                    },
                    "critical_findings": {
                      "type": "integer",
                      "description": "Number of critical security findings"
                    },
                    "high_findings": {
                      "type": "integer",
                      "description": "Number of high severity findings"
                    },
                    "medium_findings": {
                      "type": "integer",
                      "description": "Number of medium severity findings"
                    },
                    "low_findings": {
                      "type": "integer",
                      "description": "Number of low severity findings"
                    },
                    "monthly_security_cost": {
                      "type": "number",
                      "description": "Monthly security-related costs in USD"
                    },
                    "roi_trend": {
                      "type": "string",
                      "description": "ROI trend analysis"
                    },
                    "data_source": {
                      "type": "string",
                      "description": "Source of the analysis data"
                    },
                    "analysis_timestamp": {
                      "type": "string",
                      "format": "date-time",
                      "description": "Timestamp of the analysis"
                    }
                  }
                }
              }
            }
          },
          "500": {
            "description": "Internal server error",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "error": {
                      "type": "string",
                      "description": "Error message"
                    }
                  }
                }
              }
            }
          }
        }
      }
    }
  }
}
