FROM python:3.10-slim

# Set working directory
WORKDIR /app

# Install system dependencies
RUN apt-get update && apt-get install -y \
    curl \
    && rm -rf /var/lib/apt/lists/*

# Copy requirements
COPY requirements.txt .

# Install Python dependencies
RUN pip install --no-cache-dir -r requirements.txt

# Copy AgentCore runtime
COPY src/agentcore/well_architected_security_comprehensive.py .
COPY src/agentcore/.bedrock_agentcore_comprehensive.yaml .bedrock_agentcore.yaml

# Set environment variables
ENV AWS_DEFAULT_REGION=us-east-1
ENV PYTHONPATH=/app

# Expose port for AgentCore
EXPOSE 8000

# Health check
HEALTHCHECK --interval=30s --timeout=10s --start-period=5s --retries=3 \
    CMD curl -f http://localhost:8000/health || exit 1

# Run AgentCore runtime
CMD ["python", "well_architected_security_comprehensive.py"]
